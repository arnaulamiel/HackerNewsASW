<% content_for :page_title, "New" %>
<form action="/submit" accept-charset="UTF-8" method="post"><input type="hidden" >
<table border="0" align="center" cellpadding="0" cellspacing="0" width="85%" bgcolor="#f6f6ef" >
    <tbody>
        <%= csrf_meta_tags %>
        <tr>
            <td>title</td>
            <td>
                <input type="text" name="title" value="" size="50" </td>
        </tr>
        <tr>
            <td>url</td>
            <td>
                <input type="text" name="url" value="" size="50">
            </td>
        </tr>
        <tr>
            <td></td>
            <td><b>or</b></td>
        </tr>
        <tr>
            <td>text</td>
            <td>
                <textarea name="text" rows="4" cols="49"></textarea>
            </td>
        </tr>
        <tr>
            <td></td>
            <td></td>
        </tr>
        <% if current_user %>
        <input type="hidden" name = "userpost" value = <%= current_user.first_name %> >
        <input type="hidden" name = "user_id" value = <%= current_user.id %> >
        <input type="hidden" name = "votes" value = 0 >
        <%end%>
        <tr>
            <td></td>
            <td>
                
                 <% if current_user %>
                
                 <input type="submit" value="submit">
                <%else%>
                <a style="color:red"> ⚠️ If you want to submit something you MUST be logged ⚠️</a>
                <%end%>
               
            </td>
        </tr>
        <tr style="height:20px"></tr>
        <tr>
            <td></td>
            <td>Leave url blank to submit a question for discussion. If there is no url, the text (if any) will appear at the top of the thread.
            <br>
        </tr>
    </tbody>
</table>